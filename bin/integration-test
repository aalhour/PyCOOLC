#!/usr/bin/env bash
#
# PyCOOLC Integration Test Script
#
# This script compiles COOL programs using pycoolc and runs them through
# the SPIM MIPS simulator to verify end-to-end correctness.
#
# Requirements:
#   - pycoolc installed and on PATH
#   - SPIM installed (command-line version)
#
# Usage:
#   ./bin/integration-test [--verbose]
#

set -e

# Colors
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[0;33m'
CYAN='\033[0;36m'
NC='\033[0m' # No Color

# Script directory
SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"
PROJECT_ROOT="$(dirname "$SCRIPT_DIR")"

# Configuration
EXAMPLES_DIR="$PROJECT_ROOT/examples"
OUTPUT_DIR="$PROJECT_ROOT/.integration-test-output"
VERBOSE=false

# Known issues - files that have known parser/semantic issues
KNOWN_ISSUES=""

# Files that require multi-file compilation (skip in single-file tests)
MULTI_FILE_ONLY="atoi_test.cl"

# Multi-file tests - format: "output_name:file1:file2:..."
MULTI_FILE_TESTS="atoi_combined:atoi.cl:atoi_test.cl"

# Parse arguments
while [[ "$#" -gt 0 ]]; do
    case $1 in
        -v|--verbose) VERBOSE=true ;;
        *) echo "Unknown parameter: $1"; exit 1 ;;
    esac
    shift
done

# Counters
TOTAL=0
PASSED=0
FAILED=0
SKIPPED=0

# Find SPIM executable
find_spim() {
    # Check common locations
    if command -v spim >/dev/null 2>&1; then
        echo "spim"
        return 0
    fi
    
    # macOS QtSpim command-line tool
    if [ -f "/Applications/QtSpim.app/Contents/MacOS/spim" ]; then
        echo "/Applications/QtSpim.app/Contents/MacOS/spim"
        return 0
    fi
    
    # Linux common paths
    if [ -f "/usr/bin/spim" ]; then
        echo "/usr/bin/spim"
        return 0
    fi
    
    if [ -f "/usr/local/bin/spim" ]; then
        echo "/usr/local/bin/spim"
        return 0
    fi
    
    return 1
}

# Check prerequisites
check_prerequisites() {
    echo -e "${CYAN}Checking prerequisites...${NC}"
    
    # Check pycoolc
    if ! command -v pycoolc >/dev/null 2>&1; then
        # Try the venv version
        if [ -f "$PROJECT_ROOT/.venv/bin/pycoolc" ]; then
            export PATH="$PROJECT_ROOT/.venv/bin:$PATH"
        else
            echo -e "${RED}Error: pycoolc not found. Run 'make install' first.${NC}"
            exit 1
        fi
    fi
    echo -e "  pycoolc: ${GREEN}found${NC}"
    
    # Check SPIM
    SPIM=$(find_spim) || true
    if [ -z "$SPIM" ]; then
        echo -e "  spim: ${YELLOW}not found (skipping execution tests)${NC}"
        echo ""
        echo -e "${YELLOW}Note: Install SPIM from https://sourceforge.net/projects/spimsimulator/${NC}"
        echo ""
        SPIM=""
    else
        echo -e "  spim: ${GREEN}$SPIM${NC}"
    fi
    
    echo ""
}

# Compile a COOL program
compile_program() {
    local input_file="$1"
    local output_file="$2"
    
    if $VERBOSE; then
        pycoolc "$input_file" -o "$output_file" 2>&1
    else
        pycoolc "$input_file" -o "$output_file" 2>&1 >/dev/null
    fi
}

# Run a compiled program with SPIM
run_with_spim() {
    local asm_file="$1"
    local timeout_seconds=5
    
    if [ -z "$SPIM" ]; then
        return 2  # SPIM not available
    fi
    
    # Run with timeout to prevent infinite loops
    if command -v timeout >/dev/null 2>&1; then
        timeout "$timeout_seconds" "$SPIM" -file "$asm_file" 2>&1 || return 1
    elif command -v gtimeout >/dev/null 2>&1; then
        gtimeout "$timeout_seconds" "$SPIM" -file "$asm_file" 2>&1 || return 1
    else
        # No timeout available, just run it
        "$SPIM" -file "$asm_file" 2>&1 || return 1
    fi
}

# Check if file is a known issue
is_known_issue() {
    local basename="$1"
    echo "$KNOWN_ISSUES" | grep -qw "$basename"
}

# Check if file requires multi-file compilation
is_multi_file_only() {
    local basename="$1"
    echo "$MULTI_FILE_ONLY" | grep -qw "$basename"
}

# Test a single COOL program
test_program() {
    local cool_file="$1"
    local basename=$(basename "$cool_file" .cl)
    local asm_file="$OUTPUT_DIR/$basename.s"
    
    TOTAL=$((TOTAL + 1))
    
    printf "  %-30s" "$basename.cl"
    
    # Check for known issues first
    if is_known_issue "$basename.cl"; then
        echo -e "${YELLOW}KNOWN ISSUE${NC}"
        SKIPPED=$((SKIPPED + 1))
        return
    fi
    
    # Check if this file requires multi-file compilation
    if is_multi_file_only "$basename.cl"; then
        echo -e "${YELLOW}MULTI-FILE${NC}"
        SKIPPED=$((SKIPPED + 1))
        return
    fi
    
    # Try to compile
    if ! compile_program "$cool_file" "$asm_file" 2>/dev/null; then
        # Check if this is expected to fail (e.g., library files without Main)
        if grep -q "class Main" "$cool_file"; then
            echo -e "${RED}COMPILE FAILED${NC}"
            FAILED=$((FAILED + 1))
        else
            echo -e "${YELLOW}SKIPPED (no Main)${NC}"
            SKIPPED=$((SKIPPED + 1))
        fi
        return
    fi
    
    # Check that output file was created
    if [ ! -f "$asm_file" ]; then
        echo -e "${RED}NO OUTPUT${NC}"
        FAILED=$((FAILED + 1))
        return
    fi
    
    # Try to run with SPIM
    if [ -n "$SPIM" ]; then
        local output
        output=$(run_with_spim "$asm_file" 2>&1) || true
        local exit_code=$?
        
        if [ $exit_code -eq 2 ]; then
            echo -e "${GREEN}COMPILED${NC} ${YELLOW}(SPIM unavailable)${NC}"
            PASSED=$((PASSED + 1))
        elif [ $exit_code -eq 0 ]; then
            echo -e "${GREEN}PASSED${NC}"
            PASSED=$((PASSED + 1))
            if $VERBOSE && [ -n "$output" ]; then
                echo "    Output: $(echo "$output" | head -1)"
            fi
        else
            echo -e "${GREEN}COMPILED${NC} ${YELLOW}(runtime issue)${NC}"
            PASSED=$((PASSED + 1))  # Compilation succeeded
            if $VERBOSE; then
                echo "    SPIM output: $output"
            fi
        fi
    else
        echo -e "${GREEN}COMPILED${NC}"
        PASSED=$((PASSED + 1))
    fi
}

# Main test runner
run_tests() {
    echo -e "${CYAN}PyCOOLC Integration Tests${NC}"
    echo "=========================="
    echo ""
    
    check_prerequisites
    
    # Create output directory
    mkdir -p "$OUTPUT_DIR"
    
    echo -e "${CYAN}Testing example programs...${NC}"
    echo ""
    
    # Test all .cl files in examples/
    for cool_file in "$EXAMPLES_DIR"/*.cl; do
        if [ -f "$cool_file" ]; then
            test_program "$cool_file"
        fi
    done
    
    echo ""
    echo -e "${CYAN}Testing multi-file compilation...${NC}"
    echo ""
    
    # Test multi-file compilation
    for test_spec in $MULTI_FILE_TESTS; do
        IFS=':' read -ra parts <<< "$test_spec"
        local test_name="${parts[0]}"
        local files=""
        for ((i=1; i<${#parts[@]}; i++)); do
            files="$files $EXAMPLES_DIR/${parts[$i]}"
        done
        
        TOTAL=$((TOTAL + 1))
        printf "  %-30s" "$test_name"
        
        local asm_file="$OUTPUT_DIR/$test_name.s"
        if pycoolc $files -o "$asm_file" 2>/dev/null; then
            echo -e "${GREEN}COMPILED${NC}"
            PASSED=$((PASSED + 1))
        else
            echo -e "${RED}COMPILE FAILED${NC}"
            FAILED=$((FAILED + 1))
        fi
    done
    
    echo ""
    echo "=========================="
    echo -e "${CYAN}Results:${NC}"
    echo -e "  Total:   $TOTAL"
    echo -e "  ${GREEN}Passed:  $PASSED${NC}"
    if [ $FAILED -gt 0 ]; then
        echo -e "  ${RED}Failed:  $FAILED${NC}"
    else
        echo -e "  Failed:  $FAILED"
    fi
    if [ $SKIPPED -gt 0 ]; then
        echo -e "  ${YELLOW}Skipped: $SKIPPED${NC}"
    fi
    echo ""
    
    # Cleanup
    rm -rf "$OUTPUT_DIR"
    
    # Return appropriate exit code
    if [ $FAILED -gt 0 ]; then
        echo -e "${RED}Some tests failed!${NC}"
        exit 1
    else
        echo -e "${GREEN}All tests passed!${NC}"
        exit 0
    fi
}

# Run the tests
run_tests

